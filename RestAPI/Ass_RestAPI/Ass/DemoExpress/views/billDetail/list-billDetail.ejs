<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
  <%- include('../inc/header') %>
  <table border="1"  class="table table-striped" >
    <tr>
      <th>ID</th>
      <th>BillID</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Action</th>
    </tr>
    <% listBill.forEach( (row)=>{ %>
      <tr>
        <td>
          <a href="/billDetail/view/<%= row._id %>" target="_blank">
            <%= row._id %>
          </a>
        </td>
        <td>
          <%= row.BillID %> 
        </td>
        <td>
          <%= row.ProductID %>
        </td>
        <td>
          <%= row.Quantity %>
        </td>
        <td>
          <a href="/billDetail/add/" target="_blank"><button type="submit" class="btn btn-primary " >Thêm</button></a>
          <a href="/billDetail/edit/<%= row._id %>" target="_blank"><button type="submit" class="btn btn-primary " >Sửa</button></a>
          <a href="/billDetail/delete/<%= row._id %>"
            onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')"><button type="submit" class="btn btn-danger " >Xóa</button></a>
        </td>
      </tr>
      <% }) %>
  </table>


  <%- include('../inc/footer') %>
</body>
</html>