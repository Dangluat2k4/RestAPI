<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body>
  <%- include('../inc/header') %>
    <table border="1" class="table table-striped">
      <tr>
        <th>ID</th>
        <th>Image</th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
      <% listSP.forEach( (row)=>{ %>
        <tr>
          <td>
            <%= row._id %>
          </td>
          <td class="text-center"><img src="<%= row.Image %>" width="100%" /></td>
          <td>
            <a href="/products/view/<%= row._id %>" target="_blank">
              <%= row.ProductName %>
            </a>
          </td>

          <td>
            <%= row.Price %>
          </td>
          <td>
            <%= row.Description %>
          </td>
          <td>
            <%= row.Status %>
          </td>
          <td>
            <a href="/products/add/" target="_blank"><button type="submit" class="btn btn-primary ">Thêm</button></a>
            <a href="/products/edit/<%= row._id %>" target="_blank"> <button type="submit"
                class="btn btn-primary ">Sửa</button></a>
            <a href="/products/delete/<%= row._id %>"
              onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')"><button type="submit"
                class="btn btn-danger ">Xóa</button></a>
          </td>
        </tr>
        <% }) %>
    </table>


    <%- include('../inc/footer') %>

</body>

</html>